{
  "name": "invoice-app",
  "version": "1.0.0",
  "private": false,
  "author": "Wiktoria Zawadzka",
  "description": "Handy Invoicing App",
  "main": "main.js",
  "scripts": {
    "start": "npm start:react",
    "start:react": "MODE=dev webpack-dev-server --mode development --progress",
    "start:electron": "MODE=dev electron .",
    "build": "webpack --mode production",
    "dist": "electron-builder"
  },
  "dependencies": {
    "path": "^0.12.7",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "webpack-dev-server": "^3.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^2.0.0",
    "electron": "^3.0.11",
    "electron-builder": "^20.38.3",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.3.1"
  },
  "build": {
    "productName": "Invoice App",
    "appId": "org.wika.invoiceApp",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "build/**/*",
      "assets/**/*",
      "!dist/**/*",
      "!src/**/*",
      "node_modules/**/*"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
